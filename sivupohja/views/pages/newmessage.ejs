<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <form action="/newmessage" class="guestform1" onsubmit="return validateForm(this)" method="post">
            <div class="form-inner">
              <h1 class="otsikko">Leave a new message!</h1>
              <br></br><input type="text" placeholder="Username" class="formtieto1" name="formname">
              <br></br><input type="text" placeholder="Country" class="formtieto1" name="formcountry">
              <br></br><textarea placeholder="Message..." rows="3" class="formtieto2" name="formmessage"></textarea>
              <br></br><button type="submit" href="/">Submit</button>
            </div>
          </form>
    </div>

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>
<script> function validateForm(form) {
    if (form.formname.value == "" || form.formcountry.value == "" || form.formmessage.value == "") {
        alert("Empty fields must be filled out!");
        return false;
    }
}
</script> 
</body>
</html>
